@model Review

@{
    ViewBag.Title = "Add review";
}

<div class="row">
    <div class="bg-dark text-center pt-5 pb-4">
        <h3 class="text-white mb-5">Fill out the form to add a review to <span class="text-success">@Model.Phone.Name</span></h3>
        <form asp-action="Create" asp-controller="Review" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form_row mb-3">
                <label for="" class="col-4">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name...">
                    <span asp-validation-for="Name" class="text-error"/>
                </label>
            </div>
            <div class="form_row mb-3">
                <label for="" class="col-4">
                    <textarea asp-for="Message" type="text" class="form-control" placeholder="Provide delivery address..." rows="3"></textarea>
                    <span asp-validation-for="Message" class="text-error"/>
                </label>
            </div>
            <div class="form_row mb-3">
                <label for="" class="col-4">
                    <p>Indicate your rating:</p>
                    <select asp-for="Grade" class="form-control">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="Grade" class="text-error"/>
                </label>
            </div>
            <div class="form_row mb-3">
                <label for="" class="col-4">
                    <input disabled type="text" class="form-control" value="@Model.Phone.Name">
                </label>
                <input asp-for="PhoneId" type="hidden" value="@Model.Phone.Id"/>
            </div>
            <button type="submit" class="btn btn-outline-success mb-3 w-25">Add review</button>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}