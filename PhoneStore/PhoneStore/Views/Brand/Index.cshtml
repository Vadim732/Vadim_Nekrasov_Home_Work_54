@model List<Brand>

@{
    ViewBag.Title = "Brands list";
}

@if (Model != null && Model.Count != 0)
{
    <table class="table table-striped">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date of foundation</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Name</td>
                <td>@b.Email</td>
                <td>@b.DateFoundation.ToString("dd, MMMM, yyyy")</td>
                <td>
                    <a asp-action="Delete" asp-controller="Brand" asp-route-brandId="@b.Id" class="btn btn-outline-danger">Delete</a>
                    <a asp-action="Edit" asp-controller="Brand" asp-route-brandId="@b.Id" class="btn btn-outline-dark">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h4 class="text-center">Unfortunately, the list of brands is currently empty :с</h4>
    <p class="text-center"><a asp-action="Create" asp-controller="Brand" class="btn btn-dark">Add new brand</a></p>
}