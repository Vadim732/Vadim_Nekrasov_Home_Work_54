@model Phone

@{
    ViewBag.Title = "Add phone";
}


<div class="bg-dark text-center pt-5 pb-4">
    <h3 class="text-white mb-5">Fill out the form to add a new phone</h3>
    <form asp-action="Create" asp-controller="Phone" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input type="text" class="form-control" asp-for="Name" placeholder="Specify the phone model...">
                <span asp-validation-for="Name" class="text-error"/>
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="brand" class="col-4">
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                    <option value="">Select a brand...</option>
                </select>
                <span asp-validation-for="BrandId" class="text-error"/>
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input type="text" class="form-control" asp-for="Company" placeholder="Specify the manufacturing company...">
                <span asp-validation-for="Company" class="text-error"/>
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <textarea asp-for="Characteristics" type="text" class="form-control" placeholder="Specify the phone specifications..." rows="3"></textarea>
                <span asp-validation-for="Characteristics" class="text-error"/>
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input type="text" class="form-control" asp-for="Image" placeholder="Specify a link to the phone image...">
                <span asp-validation-for="Image" class="text-error"/>
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input type="number" class="form-control" asp-for="Price" placeholder="Specify the phone price...">
                <span asp-validation-for="Price" class="text-error"/>
            </label>
        </div>
        <button type="submit" class="btn btn-outline-light mb-3 w-25">Add new phone</button>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}