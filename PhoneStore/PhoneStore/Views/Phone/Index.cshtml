@model List<Phone>

@{
    ViewBag.Title = "List phones";
}

@if (Model != null && Model.Count != 0)
{
    <table class="table table-striped">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Company</td>
                <td>@p.Price</td>
                <td>
                    <a asp-action="Create" asp-controller="Order" asp-route-phoneId="@p.Id" class="btn btn-outline-success">Make order</a>
                    <a asp-action="Details" asp-controller="Phone" asp-route-phoneId="@p.Id" class="btn btn-outline-dark">Details</a>
                    <a asp-action="Delete" asp-controller="Phone" asp-route-phoneId="@p.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h4 class="text-center">Unfortunately, there are currently no phones for sale :c</h4>
}
